<p id="notice"><%= notice %></p>

<h1>To Do's</h1>

<h2>To Do Lists</h2>

<ul>
  <% @recent_lists.each do |list| %>
  <li>
    <h4><%= list.name %></h4>
    <ul>
      <%list.items.each do |item| %>
        <li>
          [<%= completed(item) %>]
          <%= item.task %>
          (<%= item.due_date %>)
        </li>
      <% end %>
    </ul>
  </li>
  <% end %>
</ul>

<%= link_to 'All Lists', lists_path %>
