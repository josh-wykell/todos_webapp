<p id="notice"><%= notice %></p>

<h2>Here Are Your Latest Lists</h2>

<div class="table-responsive" id="recent_lists">
  <% @recent_lists.each do |list| %>
  <table class="table table-striped table-hover">
    <thead>
      <tr class="text-center">
        <h4 class="text-center"><%= link_to "#{list.name}", list_path(list) %></h4>
      </tr>
      <tr>
        <th></th>
        <th>Items</th>
        <th>Due</th>
      </tr>
    </thead>
    <% list.items.each do |item| %>
    <tbody>
      <tr>
        <td class="text-left">
          <% unless item.is_complete %>
              <%= link_to complete_list_item_path(list, item), method: 'put' do %><i class="fa fa-circle-o"></i>
                <% end %>
            <% else %>
              <i class="fa fa-check-circle"></i>
            <% end %>
        </td>
        <td class="text-left"><%= item.task %></td>
        <td class="text-left"><%= item.due_date.strftime("%D") %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <% end %>
</div>

