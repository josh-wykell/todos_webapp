<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize@item.errors.count, "error" %>   prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.collection_select(:list_id, List.all, :id, :name) %>
  </div>

  <div class="field">
    <%= f.label :task %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :due %>
    <%= f.date_select :date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>